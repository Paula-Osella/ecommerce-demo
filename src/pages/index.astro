---
import Header from "../layouts/Header.astro";
import Footer from "../layouts/Footer.astro";
import MainLayout from "../layouts/MainLayout.astro";

// COLLECTIONS
const collections = [
  {
    id: 'kit-acne',
    name: 'Kit Anti-Acné',
    description: 'Tratamiento completo para piel con acné'
  },
  {
    id: 'kit-antiedad',
    name: 'Kit Anti-Edad',
    description: 'Rutina completa para combatir el envejecimiento'
  },
  {
    id: 'kit-pigmentacion',
    name: 'Kit Pigmentación',
    description: 'Solución para manchas y tono desigual'
  }
];

const reviews = [
  {
    id: 1,
    name: "María G.",
    role: "Cliente frecuente",
    rating: 5,
    text: "Desde que uso la rutina completa noto la piel mucho más luminosa y sin tanta tirantez.",
  },
  {
    id: 2,
    name: "Lucía P.",
    role: "Piel sensible",
    rating: 4,
    text: "Por primera vez encontré productos que no me irritan. Me encanta la textura de los sérums.",
  },
  {
    id: 3,
    name: "Camila R.",
    role: "Nueva en skincare",
    rating: 5,
    text: "La web me ayudó a entender cómo armar mi ritual.",
  },
];

const instagramPosts = [
  { id: 1, likes: 234, video: "/Feed/Feed_1.mp4" },
  { id: 2, likes: 189, video: "/Feed/Feed_2.mp4" },
  { id: 3, likes: 412, video: "/Feed/Feed_3.mp4" },
  { id: 4, likes: 298, video: "/Feed/Feed_4.mp4" },
];

const bestSellers = [
  {
    name: "Protección Solar Clear Soft SPF 50",
    subtitle: "Prevención",
    img: "/Sin_Fondo/CLEAR-SOFT-SPF-50-M-PREVENT-sin-fondo.webp"
  },
  {
    name: "Acn.e Bio",
    subtitle: "Control de acné",
    img: "/Sin_Fondo/ACNE-BIO-TREAT-GEL-sin-fondo.webp"
  },
  {
    name: "Suero Reparador Definitivo de Arrugas",
    subtitle: "Antienvejecimiento",
    img: "/Sin_Fondo/serum-reparador-de-arrugas-definitivo-sin-fondo.webp"
  },
  {
    name: "Hidratante Ultra para Piel Grasa",
    subtitle: "Hidratación balanceada",
    img: "/Sin_Fondo/ULTRA-MOISTURIZER-FOR-OILY-SKIN-sin-fondo.webp"
  },
];
---

<MainLayout
  title="Alvit Eclat - Cremas Antiedad, Protección Solar y Cuidado Facial"
  description="Descubre nuestra selección de productos de cuidado de la piel."
>
  <Header />

  <!-- HERO -->
  <section class="w-full relative">
    <div class="hero-img w-full h-[400px] sm:h-[500px] md:h-[600px] lg:h-[650px]">
      <div class="absolute inset-0 bg-black/20">
        <div class="relative w-full h-full flex flex-col justify-center px-6 md:px-12 lg:px-16">
          <h1 class="text-white text-3xl md:text-5xl xl:text-6xl font-bold mb-6 pt-40">
            La dermocosmética avanzada <br class="hidden sm:block" />
            es nuestra filosofía
          </h1>

          <a
            href="/products"
            class="bg-black text-white px-6 py-3 rounded-lg hover:bg-pink-600 transition w-fit"
          >
            Descubrí más
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- MÁS VENDIDO -->
  <section class="py-16 px-6">
    <h2 class="text-3xl font-bold text-center mb-12">Más Vendido</h2>

    <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-8">
      {bestSellers.map(product => (
        <div class="text-center">
          <img src={product.img} alt={product.name} class="mx-auto h-64 object-contain" />
          <h3 class="mt-4 font-semibold">{product.name}</h3>
          <p class="text-gray-500">{product.subtitle}</p>
        </div>
      ))}
    </div>
  </section>

  <!-- KITS -->
  <section class="bg-pink-50 py-16 px-6">
    <h2 class="text-3xl font-bold text-center mb-10">Nuestros Kits Terapéuticos</h2>

    <div class="grid md:grid-cols-3 gap-8 max-w-6xl mx-auto">
      {collections.map(kit => (
        <div class="bg-white p-6 rounded-xl shadow-lg text-center">
          <h3 class="text-xl font-bold mb-2">{kit.name}</h3>
          <p class="text-gray-600 mb-6">{kit.description}</p>
          <a
            href={`/kits#${kit.id}`}
            class="bg-pink-600 text-white px-6 py-3 rounded-lg hover:bg-pink-800 transition"
          >
            Ver kit
          </a>
        </div>
      ))}
    </div>
  </section>

  <!-- TESTIMONIOS -->
  <section class="py-16 px-6">
    <h2 class="text-3xl font-bold text-center mb-12">Lo que dicen nuestras clientas</h2>

    <div class="grid md:grid-cols-3 gap-8 max-w-6xl mx-auto">
      {reviews.map(review => (
        <div class="bg-white p-6 rounded-xl shadow">
          <p class="italic mb-4">"{review.text}"</p>
          <strong>{review.name}</strong>
          <p class="text-sm text-gray-500">{review.role}</p>
        </div>
      ))}
    </div>
  </section>

  <!-- INSTAGRAM -->
  <section class="py-16 px-6">
    <h2 class="text-3xl font-bold text-center mb-8">Seguinos en Instagram</h2>

    <div class="grid grid-cols-2 lg:grid-cols-4 gap-4 max-w-6xl mx-auto">
      {instagramPosts.map(post => (
        <video
          src={post.video}
          muted
          loop
          playsinline
          class="rounded-lg object-cover"
        ></video>
      ))}
    </div>
  </section>

  <!-- PDFs -->
  <section class="bg-pink-50 py-16 px-6 text-center">
    <h2 class="text-3xl font-bold mb-6">Descargá nuestros materiales</h2>

    <div class="flex justify-center gap-4 flex-wrap">
      <a
        href="/pdf/catalogo-linea-home-care.pdf"
        download
        class="bg-black text-white px-6 py-3 rounded-lg"
      >
        Catálogo Home Care
      </a>

      <a
        href="/pdf/catalogo-linea-profesional.pdf"
        download
        class="border border-black px-6 py-3 rounded-lg"
      >
        Catálogo Profesional
      </a>
    </div>
  </section>

  <Footer />
</MainLayout>

<style>
.hero-img {
  background-image: url('/Hero_Principal/Hero-mobile.webp');
  background-size: cover;
  background-position: center;
}

@media (min-width: 768px) {
  .hero-img {
    background-image: url('/Hero_Principal/Hero-desktop.webp');
  }
}
</style>
