---
import MainLayout from "../../layouts/MainLayout.astro";
import ProductCard from "../../components/ProductCard.astro";
import productsData from "../../data/products.json";
import Header from "../../layouts/Header.astro";
import Footer from "../../layouts/Footer.astro";

const allCategories = {
  "antiedad": "Antiedad",
  "limpiadores": "Limpiadores",
  "hiperpigmentacion": "Hiperpigmentaci√≥n",
  "hidratantes": "Hidratantes",
  "otros": "Otros",
  "proteccion-solar": "Protecci√≥n solar",
  "acne": "Acn√©",
};

export function getStaticPaths() {
  const cats = {
    "antiedad": "Antiedad",
    "limpiadores": "Limpiadores",
    "hiperpigmentacion": "Hiperpigmentaci√≥n",
    "hidratantes": "Hidratantes",
    "otros": "Otros",
    "proteccion-solar": "Protecci√≥n solar",
    "acne": "Acn√©",
    "all": "Todos los productos"
  };
  
  return Object.keys(cats).map((categoryId) => ({
    params: { category: categoryId },
  }));
}

const { category } = Astro.params;
const categoryLabel = category === "all" ? "Todos los productos" : (allCategories[category] || "Productos");

const filteredProducts = category === "all" 
  ? productsData 
  : productsData.filter((product) => product.category === category);

const categoryCounts = Object.keys(allCategories).reduce((acc, cat) => {
  acc[cat] = productsData.filter(p => p.category === cat).length;
  return acc;
}, {} as Record<string, number>);
---

<main title={`${categoryLabel} | Demo e-commerce`}>
  <Header />
  {/* Breadcrumb */}
  <!-- Layout: Sidebar + Contenido -->
  <section class="max-w-7xl mx-auto pb-20 px-6">
    <div class="flex flex-col md:flex-row gap-8">

      <!-- SIDEBAR IZQUIERDO -->
      <aside class="w-full md:w-60 shrink-0">

        <!-- B√∫squeda -->
        <div class="mb-10">
          <div class="relative">
            <input
              type="text"
              id="product-search"
              placeholder="Buscar productos..."
              class="w-full px-4 py-2.5 text-sm border border-gray-300 rounded focus:outline-none focus:border-gray-400"
            />
            <button
              class="absolute right-3 top-1/2 -translate-y-1/2 bg-black text-white p-1.5 rounded"
            >
              <svg
                class="w-3.5 h-3.5"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"
                ></path>
              </svg>
            </button>
          </div>
        </div>

        <!-- Categor√≠as -->
        <div>
          <h3 class="text-base font-semibold mb-5">Categor√≠as</h3>
          <ul class="space-y-3">
            <li>
              <a
                href="/products/all"
                class={`flex items-center justify-between text-sm ${
                  category === "all"
                    ? "text-pink-700"
                    : "text-gray-700 hover:text-pink-700"
                }`}
              >
                <span>Todos</span>
                <span class="text-gray-400">({productsData.length})</span>
              </a>
            </li>

            {Object.entries(allCategories).map(([catId, catLabel]) => (
              <li>
                <a
                  href={`/products/${catId}`}
                  class={`flex items-center justify-between text-sm ${
                    category === catId
                      ? "text-pink-700"
                      : "text-gray-700 hover:text-pink-700"
                  }`}
                >
                  <span>{catLabel}</span>
                  <span class="text-gray-400">
                    ({categoryCounts[catId] || 0})
                  </span>
                </a>
              </li>
            ))}
          </ul>
        </div>
      </aside>

      <!-- √ÅREA DE PRODUCTOS (DERECHA) -->
      <div class="flex-1">

        <!-- Barra superior con controles -->
        <div class="flex flex-col sm:flex-row sm:items-center justify-between gap-4 mb-8 pb-4 border-b">
          <p class="text-sm text-gray-600">
            Mostrando todos los {filteredProducts.length} resultados
          </p>

          <div class="flex items-center gap-6">
            <!-- Vistas -->
            <div class="flex gap-1">
              <button
                id="view-grid"
                class="p-2 text-pink-700 border border-gray-300 rounded"
                aria-label="Ver en cuadr√≠cula"
              >
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                  <path
                    d="M5 3a2 2 0 00-2 2v2a2 2 0 002 2h2a2 2 0 002-2V5a2 2 0 00-2-2H5zM5 11a2 2 0 00-2 2v2a2 2 0 002 2h2a2 2 0 002-2v-2a2 2 0 00-2-2H5zM11 5a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V5zM11 13a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z"
                  ></path>
                </svg>
              </button>

              <button
                id="view-list"
                class="p-2 text-gray-600 hover:text-pink-700 border border-gray-300 rounded"
                aria-label="Ver en lista"
              >
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                  <path
                    fill-rule="evenodd"
                    d="M3 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z"
                    clip-rule="evenodd"
                  ></path>
                </svg>
              </button>
            </div>
          </div>
        </div>

        <!-- Grid / Lista de productos -->
        {filteredProducts.length > 0 ? (
          <div
            id="products-grid"
            class="
              products-grid
              grid
              grid-cols-1
              sm:grid-cols-2
              lg:grid-cols-3
              xl:grid-cols-4
              gap-8
              items-start
            "
          >
            {filteredProducts.map((product) => (
              <ProductCard product={product} />
            ))}
          </div>
        ) : (
          <p class="text-center py-12 text-gray-600">
            No se encontraron productos.
          </p>
        )}
      </div>
    </div>
  </section>

  <Footer />
</main>

<script>
    const searchInput = document.getElementById("product-search") as HTMLInputElement | null;
    const productsGrid = document.getElementById("products-grid") as HTMLElement | null;
    const viewGridBtn = document.getElementById("view-grid") as HTMLButtonElement | null;
    const viewListBtn = document.getElementById("view-list") as HTMLButtonElement | null;

    // üîé B√öSQUEDA (lo que ya ten√≠as)
    if (searchInput && productsGrid) {
      searchInput.addEventListener("input", (e) => {
        const searchTerm = (e.target as HTMLInputElement).value.toLowerCase();
        const productCards = productsGrid.querySelectorAll("article");

        productCards.forEach((card) => {
          const text = card.textContent?.toLowerCase() || "";
          (card as HTMLElement).style.display = text.includes(searchTerm) ? "flex" : "none";
        });
      });
    }

    // üîÅ CAMBIO DE VISTA (grid / lista)
    if (productsGrid && viewGridBtn && viewListBtn) {
      const setView = (mode: "grid" | "list") => {
        const cards = productsGrid.querySelectorAll(".product-card") as NodeListOf<HTMLElement>;

        if (mode === "grid") {
          productsGrid.classList.add("grid-view");
          productsGrid.classList.remove("list-view");

          cards.forEach((card) => card.classList.remove("list-view"));

          viewGridBtn.classList.add("text-pink-700");
          viewListBtn.classList.remove("text-pink-700");
        } else {
          productsGrid.classList.add("list-view");
          productsGrid.classList.remove("grid-view");

          cards.forEach((card) => card.classList.add("list-view"));

          viewListBtn.classList.add("text-pink-700");
          viewGridBtn.classList.remove("text-pink-700");
        }
      };

      // Vista inicial: grid (como ahora)
      setView("grid");

      viewGridBtn.addEventListener("click", () => setView("grid"));
      viewListBtn.addEventListener("click", () => setView("list"));
    }
</script>
