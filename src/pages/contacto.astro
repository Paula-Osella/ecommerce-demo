<!-- üì® L√ìGICA DE EMAILJS EN EL CLIENTE -->
<script>
  import emailjs from "@emailjs/browser";

  const SERVICE_ID = "service_ajn2u06";
  const TEMPLATE_ID = "template_6e3r3rd";
  const PUBLIC_KEY  = "gcbEB2wW1kLoICuTX";

  window.addEventListener("DOMContentLoaded", () => {
    const form = document.getElementById("contact-form");
    const statusBox = document.getElementById("form-status");
    const statusText = document.getElementById("form-status-text");
    const statusIcon = document.getElementById("form-status-icon");
    const submitBtn = document.getElementById("contact-submit");

    if (!form) {
      console.error("‚ùå No se encontr√≥ el formulario con id #contact-form");
      return;
    }

    function setStatus(state, message) {
      if (!statusBox || !statusText || !statusIcon) return;

      statusBox.classList.remove("hidden");

      // üëá limpiamos todas las posibles combinaciones de color
      statusBox.classList.remove(
        "bg-pink-50",
        "border-pink-200",
        "text-pink-800",
        "bg-red-50",
        "border-red-200",
        "text-red-800",
        "bg-blue-50",
        "border-blue-200",
        "text-blue-800",
        "bg-emerald-50",
        "border-emerald-200",
        "text-emerald-800"
      );

      if (state === "loading") {
        statusBox.classList.add("bg-blue-50", "border-blue-200", "text-blue-800");
        statusIcon.textContent = "‚è≥";
      } else if (state === "success") {
        // ‚úÖ VERDE: √©xito
        statusBox.classList.add("bg-emerald-50", "border-emerald-200", "text-emerald-800");
        statusIcon.textContent = "‚úÖ";
      } else if (state === "error") {
        statusBox.classList.add("bg-red-50", "border-red-200", "text-red-800");
        statusIcon.textContent = "‚ö†Ô∏è";
      }

      statusText.textContent = message;
    }

    form.addEventListener("submit", (event) => {
      event.preventDefault();

      setStatus("loading", "Enviando tu mensaje, por favor esper√° un momento...");
      if (submitBtn) {
        submitBtn.disabled = true;
        submitBtn.classList.add("opacity-70", "cursor-not-allowed");
        submitBtn.textContent = "Enviando...";
      }

      emailjs
        .sendForm(SERVICE_ID, TEMPLATE_ID, form, PUBLIC_KEY)
        .then(() => {
          console.log("‚úÖ EmailJS: mensaje enviado correctamente");
          setStatus(
            "success",
            "¬°Tu consulta fue enviada con √©xito! Te vamos a responder a la brevedad."
          );
          form.reset();

          if (submitBtn) {
            submitBtn.disabled = false;
            submitBtn.classList.remove("opacity-70", "cursor-not-allowed");
            submitBtn.textContent = "Enviar Mensaje";
          }
        })
        .catch((error) => {
          console.error("‚ùå Error al enviar el mensaje con EmailJS:", error);
          setStatus(
            "error",
            "Ocurri√≥ un problema al enviar tu mensaje. Por favor, volv√© a intentarlo."
          );

          if (submitBtn) {
            submitBtn.disabled = false;
            submitBtn.classList.remove("opacity-70", "cursor-not-allowed");
            submitBtn.textContent = "Enviar Mensaje";
          }
        });
    });
  });
</script>

